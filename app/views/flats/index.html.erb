<h1>All flats</h1>
<ul>
  <% @flats.each do |flat| %>
    <li><%= flat.name %></li>
    <li><%= flat.address %></li>
    <li><%= flat.number_of_guests %></li>
    <li><%= flat.price_per_night %></li>
    <%= link_to "More info", flat_path(flat) %>
  <% end %>
</ul>


<% if false %>
<%= link_to "Edit", edit_flat_path(@flat) %>
<%= link_to "Remove", destroy_flat_path(@flat) %>
<% end %>
